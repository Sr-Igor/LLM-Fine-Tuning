    "tool_def": "- company.update: {\n    \"p\":{\"id\":\"string\"},\n    \"q\": {\"action\":\"string\"},\n    \"b\":{\n        \"name\":\"string (optional)\",\n        \"email\":\"email (optional)\"\n    }\n}",
    "checks": [
